---
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="dark:bg-[#091121] dark:text-[#e8e6e3] lg:px-[22.5%] md:px-[12.5%] sm:px-[5%] px-8 py-[5%]">
		<slot />
	</body>
</html>

<style>
:global(pre.astro-code) {
	padding: 1rem;
  margin: 1.5rem 0;
	border-radius: .5rem;
	background-color: #122537 !important;

}
</style>
